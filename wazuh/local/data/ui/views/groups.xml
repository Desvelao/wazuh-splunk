<form>
  <label>Groups</label>
  <row>
    <panel>
      <table>
        <title>Manager groups</title>
        <search>
          <query>| getgroups | table name,merged_sum </query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="count">10</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">row</option>
        <option name="rowNumbers">false</option>
        <option name="wrap">true</option>
        <fields>["name","merged_sum"]</fields>
        <drilldown>
          <set token="showDetails">true</set>
          <set token="name">$row.name$</set>
        </drilldown>
      </table>
    </panel>
  </row>
  <row depends="$showDetails$">
    <panel>
      <table>
        <search>
          <query>| getfilesfromgroup $name$ | table filename,hash </query>
          <earliest>-60m@m</earliest>
          <latest>now</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">10</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">row</option>
        <option name="rowNumbers">false</option>
        <option name="wrap">true</option>
        <fields>["filename","hash"]</fields>
        <drilldown>
          <set token="showFileDetails">true</set>
          <set token="filename">$row.filename$</set>
        </drilldown>
      </table>
    </panel>
    <panel>
      <table>
        <search>
          <query>| getagentsfromgroup $name$ | table id,name,ip,last_keepalive </query>
          <earliest>-60m@m</earliest>
          <latest>now</latest>
          <sampleRatio>1</sampleRatio>
        </search>
      </table>
    </panel>
    </row>
    <row depends="$showFileDetails$">
    <panel>
      <single>
        <title>File content</title>
        <search>
          <query>| getfilecontent $name$ $filename$ |</query>
        </search>
        <option name="drilldown">none</option>
        <option name="height">50</option>
      </single>
    </panel>
  </row>
</form>