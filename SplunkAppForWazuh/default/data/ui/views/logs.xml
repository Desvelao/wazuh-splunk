<dashboard>
  <label>Manager Logss</label>
  <row>

      <label>Post Process in Form Inputs</label>

      <!-- Global search for post process by dropdown input -->
      <!-- Search uses stats command to limit results to less than 10,000 limit -->
      <search id="searchInput">
        <query>index=wazuh_api sourcetype="wazuh:api:info:basic" | stats count by sourcetype</query>
        <earliest>-60min</earliest>
        <latest>now</latest>
      </search>

      <fieldset submitButton="false">

      <!-- Select an level  from two static choices -->
        <input type="dropdown" token="level" searchWhenChanged="true">
          <label>Select a level to search</label>
          <choice value="_internal">WARNING</choice>
          <choice value="_internal">INFO</choice>
          <choice value="*">All levels</choice>
          <default>INFO</default>
        </input>
        <!-- Dynamically populate choices -->
        <input type="time" token="time_tok" searchWhenChanged="true">
          <label></label>
          <default>
            <earliest>-24h@h</earliest>
            <latest>now</latest>
          </default>
        </input>
      </fieldset>
