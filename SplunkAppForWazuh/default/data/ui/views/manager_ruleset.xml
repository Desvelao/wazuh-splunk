<dashboard>
  <label>Manager Ruleset</label>
  <row>
    <panel>
      <table>
        <search>
          <query>| getruleset | rename pci-0 as pci0,pci-1 as pci1,pci-2 as pci2,pci-3 as pci3,pci-4 as pci4, "details-info{}" as details.info, groups-0 as groups0, groups-1 as groups1, groups-2 as groups2 | eval Requirement = mvappend(pci0,pci1,pci2,pci3,pci4) | eval Groups = mvappend(groups0,groups1,groups2) |table id, file, description, Requirement, Groups, level, "details-regex", "details-info", "details-if_sid", "details-frequency" | dedup id |  sort - level | fillnull value="-"</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">5</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="rowNumbers">false</option>
        <option name="wrap">true</option>
        <fields>["id","file","description","Requirement","level"]</fields>
        <drilldown>
          <set token="showDetails">true</set>
          <set token="Groups">$row.Groups$</set>
          <set token="Requirement">$row.Requirement$</set>
          <set token="description">$row.description$</set>
          <set token="id">$row.id$</set>
          <!-- Set tokens based on hidden fields in the result table -->
          <set token="details-if_sid">$row.details-if_sid$</set>
          <set token="details-regex">$row.details-regex$</set>
          <set token="details-info">$row.details-info$</set>
          <set token="details-frequency">$row.details-frequency$</set>
        </drilldown>
      </table>
    </panel>
  </row>
  <row depends="$showDetails$">
    <panel>
      <html>
      <h3>Details</h3>
      <table cellpadding="2" cellspacing="0">
        <tr>
          <th style="text-align:left; width:100px;">field</th>
          <th style="text-align:left">value</th>
        </tr>
        <tr>
          <td>Requirement</td>
          <td>$Requirement$</td>
        </tr>
        <tr>
          <td>id</td>
          <td>$id$</td>
        </tr>
        <tr>
          <td>Description</td>
          <td>$description$</td>
        </tr>
        <tr>
          <td>Groups</td>
          <td>$Groups$</td>
        </tr>
        <tr>
          <td>details-if_sid</td>
          <td>$details-if_sid$</td>
        </tr>
        <tr>
          <td>details-regex</td>
          <td>$details-regex$</td>
        </tr>
        <tr>
          <td>details-info</td>
          <td>$details-info$</td>
        </tr>
        <tr>
          <td>details-frequency</td>
          <td>$details-frequency$</td>
        </tr>
      </table>
        </html>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>Top 24h rule.id</title>
        <search>
          <query>index=wazuh sourcetype=wazuh | top rule.id</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Top groups</title>
        <search>
          <query>index=wazuh sourcetype=wazuh | top rule.groups</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Top PCI Requeriments</title>
        <search>
          <query>index=wazuh sourcetype=wazuh | top rule.pci_dss{} useother=f</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Top level</title>
        <search>
          <query>index=wazuh sourcetype=wazuh  | top rule.level</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
  </row>
</dashboard>