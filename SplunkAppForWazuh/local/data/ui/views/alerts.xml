  <row>
    <panel>
      <title>Signature counts</title>
      <table>
        <search>
          <query>index=wazuh sourcetype="wazuh"  | chart sparkline count by rule.description | sort - count | head 5</query>
          <earliest>$when.earliest$</earliest>
          <latest>$when.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">true</option>
        <option name="totalsRow">false</option>
        <option name="wrap">false</option>
        <drilldown>
          <link target="_blank">search?q=index=wazuh sourcetype="wazuh"  | chart sparkline count by rule.description | sort - count | head 5&amp;earliest=$when.earliest$&amp;latest=$when.latest$</link>
        </drilldown>
      </table>
    </panel>
    <panel>
      <title>Alerts level &gt; 9</title>
      <table>
        <search>
          <query>index=wazuh sourcetype="wazuh" "rule.level"&gt;=9 | table agent.name, rule.level, rule.description</query>
          <earliest>$when.earliest$</earliest>
          <latest>$when.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
