    <panel>
      <title>Top 10 high risk alerts</title>
      <chart>
        <search>
          <query>index=wazuh sourcetype=wazuh oscap.check.result="fail" rule.groups="oscap" rule.groups="oscap-result"  oscap.check.severity="high" | top oscap.check.title</query>
          <earliest>$when.earliest$</earliest>
          <latest>$when.latest$</latest>
          <sampleRatio>1</sampleRatio>
